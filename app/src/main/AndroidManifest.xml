<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ahmed.dogyapp"
    android:name=".MyApplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:icon="@drawable/ldo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ldo"
        android:supportsRtl="true"
        android:theme="@style/Theme.DOGY.NoActionBar">

        <activity android:name=".SplachActivity"
            android:theme="@style/Theme.DOGY.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".HomeActivity"
            android:exported="false"
            android:label="@string/title_activity_home"
            android:theme="@style/Theme.DOGY.NoActionBar" />
        <activity android:name=".AUTH.LoginActivity"/>
        <activity android:name=".AUTH.ForgetAndChangePasswordActivity"/>
        <activity android:name=".AUTH.RegisterActivity"/>
        <activity android:name=".WelcomeActivity"/>
        <activity android:name=".AUTH.CheckEmailActivity"/>
        <activity android:name=".AUTH.WelcomeBack"/>

    </application>

</manifest>