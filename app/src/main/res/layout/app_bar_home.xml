<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<RelativeLayout
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:foreground="?android:attr/selectableItemBackground"
                android:id="@+id/ser"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16sp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="12dp"
                android:textSize="12sp"
                android:paddingBottom="12dp"
                android:text="Services"
                android:textColor="@color/txt_clr" />


            <TextView
                android:foreground="?android:attr/selectableItemBackground"
                android:id="@+id/sup"
                android:layout_width="0dp"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:gravity="center"

                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="Supplier" />

            <TextView
                android:foreground="?android:attr/selectableItemBackground"
                android:id="@+id/tim"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:textSize="12sp"
                android:gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="Time" />

            <TextView
                android:foreground="?android:attr/selectableItemBackground"
                android:id="@+id/add"
                android:layout_width="0dp"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="Address"
                android:textColor="@color/txt_clr" />

            <TextView
                android:foreground="?android:attr/selectableItemBackground"
                android:id="@+id/fin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16sp"
                android:layout_weight="1"
                android:textSize="12sp"
                android:gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="Finish"
                android:textColor="@color/txt_clr" />

        </LinearLayout>

        <com.ahmed.dogyapp.CustomViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="100dp" />


        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="98dp">

            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="77.5dp"
                android:layout_marginEnd="-10dp"
                android:layout_marginStart="-10dp"
                android:background="@drawable/back2"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="74.5dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="-7dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="-7dp"
                android:background="@drawable/back1" />



            <LinearLayout
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/back"
                    android:layout_marginEnd="16dp"
                    android:visibility="gone"
                    android:layout_width="90dp"
                    android:layout_height="45dp">

                    <View
                        android:layout_width="90dp"
                        android:background="@drawable/back_purple_700_rad_50in"
                        android:layout_height="45dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_margin="3dp"
                        android:background="@drawable/back_button"
                        android:gravity="center"
                        android:text="Back"
                        android:textAllCaps="true"
                        android:textColor="@color/txt_clr"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/next"
                    android:layout_width="90dp"
                    android:layout_height="45dp">

                    <View
                        android:layout_width="90dp"
                        android:background="@drawable/back_purple_700_rad_50in"
                        android:layout_height="45dp"/>

                    <TextView
                        android:id="@+id/txt_next"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="3dp"
                        android:layout_marginBottom="3dp"
                        android:background="@drawable/back_white"
                        android:gravity="center"
                        android:text="@string/next"
                        android:textAllCaps="true"
                        android:textColor="@color/txt_clr"
                        android:textStyle="bold" />

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="24sp"
                android:gravity="center"
                android:textColor="@color/ser_color"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Choose a services" />

        </RelativeLayout>

    </RelativeLayout>


    <FrameLayout
        android:id="@+id/nav_host_fragment_content_home"
        android:layout_width="match_parent"
        android:layout_marginTop="80dp"
        android:visibility="gone"
        android:background="@color/background"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.dd.ShadowLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="46dp"
            android:layout_marginStart="-4dp"
            android:layout_marginEnd="-4dp"
            app:sl_dx="0dp"
            app:sl_dy="0dp"
            app:sl_cornerRadius="17dp"
            app:sl_shadowRadius="4dp"
            app:sl_shadowColor="#AA666666">
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/menu_services"/>

        </com.dd.ShadowLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingEnd="32dp"
            android:background="@drawable/gradient_b">

            <ImageView
                android:foreground="?android:attr/selectableItemBackground"
                android:id="@+id/menu_button"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_menu"
                android:layout_marginStart="16dp"
                android:padding="12dp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Pet"
                android:textSize="18sp"
                android:paddingEnd="16dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                />

        </LinearLayout>




    </RelativeLayout>

</RelativeLayout>
</layout>
