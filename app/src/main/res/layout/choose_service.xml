<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/services_page"
        android:orientation="vertical">

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"/>
            <RelativeLayout
                android:layout_width="160dp"
                android:gravity="center"
                android:background="@drawable/border"
                android:layout_height="160dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/border_white" />

                <ImageView
                    android:id="@+id/cat"
                    android:layout_width="80dp"
                    android:layout_marginTop="-8dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/cat" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cat"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:text="Training"
                    android:textColor="@color/txt_clr"
                    android:textStyle="bold" />


            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"/>
            <RelativeLayout
                android:layout_width="160dp"
                android:background="@drawable/border"
                android:layout_height="160dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:background="@drawable/border_white"/>

                <ImageView
                    android:id="@+id/hotel"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/pet_hotel" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hotel"
                    android:textColor="@color/txt_clr"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:text="Pet Hotel"
                    android:textStyle="bold" />




            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"/>


        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="16sp"
            android:layout_width="160dp"
            android:layout_gravity="center"
            android:background="@drawable/border"
            android:layout_height="160dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:background="@drawable/border_white"/>

            <ImageView
                android:id="@+id/veterinary"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="16sp"
                android:src="@drawable/veterinary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/veterinary"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:text="Veterinary"/>




        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>


    </LinearLayout>
</layout>
